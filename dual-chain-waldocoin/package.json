{
  "name": "waldocoin-dual-chain",
  "version": "1.0.0",
  "description": "WALDOCOIN Dual-Chain Ecosystem (XRPL + Solana)",
  "main": "backend/server.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon backend/server.js",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run backend:build && npm run frontend:build",
    "backend:build": "echo 'Backend build complete'",
    "frontend:build": "cd frontend && npm run build",
    "start": "node backend/server.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "telegram:dev": "node bots/telegram/bot.js",
    "twitter:dev": "node bots/twitter/bot.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "redis": "^4.6.7",
    "xrpl": "^2.11.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.8",
    "@project-serum/anchor": "^0.28.0",
    "node-telegram-bot-api": "^0.63.0",
    "twitter-api-v2": "^1.15.1",
    "axios": "^1.5.0",
    "joi": "^17.9.2",
    "helmet": "^7.0.0",
    "rate-limiter-flexible": "^2.4.2",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "concurrently": "^8.2.0",
    "jest": "^29.6.2",
    "eslint": "^8.46.0",
    "@types/node": "^20.4.8",
    "typescript": "^5.1.6"
  },
  "keywords": [
    "waldocoin",
    "xrpl",
    "solana",
    "meme",
    "cryptocurrency",
    "dual-chain"
  ],
  "author": "WALDOCOIN Team",
  "license": "MIT"
}
