<script>
    let selectedAmount = 0;
    let connectedWallet = null;
    let hasTrustline = false;

    function showStep(stepNumber) {
        document.getElementById('step1-connect').style.display = stepNumber === 1 ? 'block' : 'none';
        document.getElementById('step2-trustline').style.display = stepNumber === 2 ? 'block' : 'none';
        document.getElementById('step3-purchase').style.display = stepNumber === 3 ? 'block' : 'none';
    }

    async function connectXummWallet() {
        try {
            document.getElementById('qrPlaceholder').innerText = 'Loading QR...';
            document.getElementById('xummQR').style.display = 'none';

            const response = await fetch('https://waldocoin-backend-api.onrender.com/api/login');
            const data = await response.json();

            if (data.qr && data.uuid) {
                document.getElementById('xummQR').src = data.qr;
                document.getElementById('xummQR').style.display = 'block';
                document.getElementById('xummQR').style.margin = '10px auto';
                document.getElementById('qrPlaceholder').style.display = 'none';

                if (data.next && data.next.always) {
                    document.getElementById('xummDeepLink').href = data.next.always;
                    document.getElementById('xummDeepLink').style.display = 'block';
                }

                // Store UUID for polling
                sessionStorage.setItem('presale_uuid', data.uuid);

                // Start aggressive polling immediately
                pollForConnection(data.uuid);

                // Also add a backup check every 3 seconds
                const backupCheck = setInterval(async () => {
                    if (connectedWallet) {
                        clearInterval(backupCheck);
                        return;
                    }

                    try {
                        const statusResponse = await fetch('https://waldocoin-backend-api.onrender.com/api/login/status?uuid=' + data.uuid);
                        const statusData = await statusResponse.json();

                        if (statusData.signed && statusData.account) {
                            clearInterval(backupCheck);
                            connectedWallet = statusData.account;
                            sessionStorage.setItem('presale_wallet', statusData.account);

                            document.getElementById('connectedWallet').innerText = connectedWallet;
                            document.getElementById('connectionStatus').innerText = 'Connected!';
                            document.getElementById('connectionStatus').style.color = '#25c2a0';
                            document.getElementById('disconnectBtn').style.display = 'inline-block';

                            checkTrustlineAndProceed();
                        }
                    } catch (e) {
                        console.log('Backup check failed:', e);
                    }
                }, 3000);

                // Stop backup check after 2 minutes
                setTimeout(() => clearInterval(backupCheck), 120000);
            }
        } catch (error) {
            document.getElementById('qrPlaceholder').innerHTML = 'Failed to load<br><button onclick="connectXummWallet()" style="background: #25c2a0; color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;">Try Again</button>';
        }
    }

    function pollForConnection(uuid) {
        console.log('🔄 Starting to poll for connection with UUID:', uuid);
        let pollCount = 0;
        const maxPolls = 60; // Poll for 2 minutes

        const pollInterval = setInterval(async () => {
            pollCount++;
            console.log('📡 Poll attempt', pollCount, '/', maxPolls, 'for UUID:', uuid);

            try {
                const response = await fetch('https://waldocoin-backend-api.onrender.com/api/login/status?uuid=' + uuid);
                const data = await response.json();

                console.log('📡 Poll response:', data);

                if (data.signed && data.account) {
                    clearInterval(pollInterval);
                    connectedWallet = data.account;

                    console.log('✅ Wallet connected via polling:', connectedWallet);

                    // Store wallet in session storage
                    sessionStorage.setItem('presale_wallet', data.account);

                    document.getElementById('connectedWallet').innerText = connectedWallet;
                    document.getElementById('connectionStatus').innerText = 'Connected!';
                    document.getElementById('connectionStatus').style.color = '#25c2a0';
                    document.getElementById('disconnectBtn').style.display = 'inline-block';

                    checkTrustlineAndProceed();
                } else if (data.expired) {
                    clearInterval(pollInterval);
                    console.log('❌ QR Code expired');
                    document.getElementById('qrPlaceholder').innerHTML = 'QR Code Expired<br><button onclick="connectXummWallet()" style="background: #25c2a0; color: white; border: none; padding: 5px 10px; border-radius: 5px; cursor: pointer;">Get New QR</button>';
                    document.getElementById('qrPlaceholder').style.display = 'flex';
                    document.getElementById('xummQR').style.display = 'none';
                }
            } catch (error) {
                console.error('❌ Polling error:', error);
            }

            // Show manual check button after 10 attempts (20 seconds)
            if (pollCount >= 10) {
                document.getElementById('manualCheckBtn').style.display = 'inline-block';
            }

            // Stop polling after max attempts
            if (pollCount >= maxPolls) {
                clearInterval(pollInterval);
                console.log('⏰ Polling timeout after', maxPolls, 'attempts');
                document.getElementById('connectionStatus').innerText = 'Connection timeout - try manual check';
                document.getElementById('connectionStatus').style.color = '#e74c3c';
                document.getElementById('manualCheckBtn').style.display = 'inline-block';
            }
        }, 2000);
    }

    // Manual connection check
    async function manualCheckConnection() {
        const storedUuid = sessionStorage.getItem('presale_uuid');
        if (storedUuid) {
            console.log('🔍 Manual check for UUID:', storedUuid);
            document.getElementById('connectionStatus').innerText = 'Checking...';
            document.getElementById('connectionStatus').style.color = '#ffd93d';

            try {
                const response = await fetch('https://waldocoin-backend-api.onrender.com/api/login/status?uuid=' + storedUuid);
                const data = await response.json();

                console.log('🔍 Manual check response:', data);

                if (data.signed && data.account) {
                    connectedWallet = data.account;
                    sessionStorage.setItem('presale_wallet', data.account);

                    document.getElementById('connectedWallet').innerText = connectedWallet;
                    document.getElementById('connectionStatus').innerText = 'Connected!';
                    document.getElementById('connectionStatus').style.color = '#25c2a0';
                    document.getElementById('disconnectBtn').style.display = 'inline-block';
                    document.getElementById('manualCheckBtn').style.display = 'none';

                    checkTrustlineAndProceed();
                } else {
                    document.getElementById('connectionStatus').innerText = 'Not signed yet - scan QR in XUMM';
                    document.getElementById('connectionStatus').style.color = '#e74c3c';
                }
            } catch (error) {
                console.error('Manual check error:', error);
                document.getElementById('connectionStatus').innerText = 'Check failed - try again';
                document.getElementById('connectionStatus').style.color = '#e74c3c';
            }
        } else {
            alert('No connection UUID found. Please refresh and try again.');
        }
    }

    async function checkTrustlineAndProceed() {
        try {
            const hasWaldoTrustline = await checkTrustlineDirectXRPL(connectedWallet);

            if (hasWaldoTrustline) {
                hasTrustline = true;
                showStep(3);
                loadPresaleProgress(); // Load progress when showing purchase step
            } else {
                showStep(2);
                loadTrustlineQR(); // Load trustline QR immediately
            }
        } catch (error) {
            showStep(2);
            loadTrustlineQR(); // Load trustline QR on error too
        }
    }

    async function checkTrustlineDirectXRPL(wallet) {
        const servers = ['https://xrplcluster.com', 'https://s1.ripple.com:51234'];

        for (const server of servers) {
            try {
                const response = await fetch(server, {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        method: 'account_lines',
                        params: [{
                            account: wallet,
                            ledger_index: 'validated'
                        }]
                    })
                });

                const data = await response.json();
                if (data.result && data.result.lines) {
                    const waldoTrustline = data.result.lines.find(line =>
                        line.account === 'rstjAWDiqKsUMhHqiJShRSkuaZ44TXZyDY' && line.currency === 'WLO'
                    );
                    return !!waldoTrustline;
                }
            } catch (error) {
                continue;
            }
        }
        return false;
    }

    // Load trustline QR code and start automatic polling
    async function loadTrustlineQR() {
        try {
            console.log('🔗 Loading trustline QR...');
            document.getElementById('trustlineQRPlaceholder').innerText = 'Loading Trustline QR...';
            document.getElementById('trustlineQR').style.display = 'none';
            document.getElementById('trustlineStatus').innerText = 'Loading QR code...';

            const response = await fetch('https://waldocoin-backend-api.onrender.com/api/login/trustline');
            const data = await response.json();

            console.log('📡 Trustline API response:', data);

            if (data.qr && data.uuid) {
                console.log('✅ Trustline QR received');
                document.getElementById('trustlineQR').src = data.qr;
                document.getElementById('trustlineQR').style.display = 'block';
                document.getElementById('trustlineQRPlaceholder').style.display = 'none';
                document.getElementById('trustlineStatus').innerText = 'Scan QR to add trustline...';

                if (data.next && data.next.always) {
                    document.getElementById('trustlineDeepLink').href = data.next.always;
                    document.getElementById('trustlineDeepLink').style.display = 'block';
                }

                // Start polling for trustline completion
                pollForTrustlineCompletion(data.uuid);
            } else {
                console.log('❌ No QR in response, using fallback');
                // Fallback: poll wallet directly
                startDirectTrustlinePolling();
            }
        } catch (error) {
            console.error('❌ Error loading trustline QR:', error);
            startDirectTrustlinePolling();
        }
    }

    // Poll for trustline transaction completion via UUID
    function pollForTrustlineCompletion(uuid) {
        console.log('🔄 Polling for trustline completion with UUID:', uuid);

        const pollInterval = setInterval(async () => {
            try {
                const response = await fetch('https://waldocoin-backend-api.onrender.com/api/login/status?uuid=' + uuid);
                const data = await response.json();

                console.log('📡 Trustline poll response:', data);

                if (data.signed || data.completed) {
                    clearInterval(pollInterval);
                    console.log('✅ Trustline transaction completed!');
                    document.getElementById('trustlineStatus').innerText = 'Trustline added! Proceeding...';
                    document.getElementById('trustlineStatus').style.color = '#25c2a0';

                    // Verify trustline and proceed with retries
                    setTimeout(async () => {
                        console.log('🔍 Verifying trustline after completion...');

                        // Try multiple times to verify trustline
                        let attempts = 0;
                        const maxAttempts = 5;

                        const verifyTrustline = async () => {
                            attempts++;
                            console.log(`🔍 Trustline verification attempt ${attempts}/${maxAttempts}`);

                            const hasWaldoTrustline = await checkTrustlineDirectXRPL(connectedWallet);

                            if (hasWaldoTrustline) {
                                console.log('✅ Trustline verified! Proceeding to Step 3...');
                                hasTrustline = true;
                                showStep(3);
                                loadPresaleProgress();
                            } else if (attempts < maxAttempts) {
                                console.log(`⚠️ Trustline not found yet, retrying in 3 seconds... (${attempts}/${maxAttempts})`);
                                document.getElementById('trustlineStatus').innerText = `Verifying trustline... (${attempts}/${maxAttempts})`;
                                setTimeout(verifyTrustline, 3000);
                            } else {
                                console.log('❌ Trustline verification failed after all attempts');
                                document.getElementById('trustlineStatus').innerText = 'Trustline verification failed. Please try again.';
                                document.getElementById('trustlineStatus').style.color = '#e74c3c';
                            }
                        };

                        verifyTrustline();
                    }, 2000);
                }
            } catch (error) {
                console.error('❌ Trustline polling error:', error);
            }
        }, 2000);

        // Show manual check button after 30 seconds
        setTimeout(() => {
            document.getElementById('manualTrustlineCheck').style.display = 'inline-block';
        }, 30000);

        // Stop polling after 2 minutes
        setTimeout(() => {
            clearInterval(pollInterval);
            console.log('⏰ Trustline polling timeout');
            document.getElementById('manualTrustlineCheck').style.display = 'inline-block';
        }, 120000);
    }

    // Direct wallet polling (fallback)
    function startDirectTrustlinePolling() {
        console.log('🔄 Starting direct wallet trustline polling...');
        document.getElementById('trustlineStatus').innerText = 'Waiting for trustline...';
        document.getElementById('trustlineQRPlaceholder').innerHTML =
            '<a href="https://xumm.app/detect/xumm:trustline?issuer=rstjAWDiqKsUMhHqiJShRSkuaZ44TXZyDY&currency=WLO" style="color: #ffd93d; text-decoration: none; font-weight: bold;" onclick="event.preventDefault(); window.location.replace(this.href); return false;">📲 Add Trustline in XAMAN</a>';

        const pollInterval = setInterval(async () => {
            try {
                const hasWaldoTrustline = await checkTrustlineDirectXRPL(connectedWallet);

                if (hasWaldoTrustline) {
                    clearInterval(pollInterval);
                    console.log('✅ Trustline detected via direct polling!');
                    document.getElementById('trustlineStatus').innerText = 'Trustline detected! Proceeding...';
                    document.getElementById('trustlineStatus').style.color = '#25c2a0';

                    hasTrustline = true;
                    setTimeout(() => {
                        showStep(3);
                        loadPresaleProgress();
                    }, 1000);
                }
            } catch (error) {
                console.error('❌ Direct trustline polling error:', error);
            }
        }, 3000);

        // Stop polling after 3 minutes
        setTimeout(() => {
            clearInterval(pollInterval);
            console.log('⏰ Direct trustline polling timeout');
        }, 180000);
    }

    function selectAmount(amount) {
        selectedAmount = amount;

        // Update button styles
        document.querySelectorAll('button[onclick^="selectAmount"]').forEach(btn => {
            btn.style.background = '#1a4d2e';
        });
        event.target.style.background = '#25c2a0';

        // Calculate WALDO amount with correct rate
        let waldoAmount = amount * 10000; // Base rate: 10,000 WALDO per XRP
        let bonus = 0;

        if (amount >= 80 && amount < 90) bonus = 15;
        if (amount >= 90 && amount < 100) bonus = 22;
        if (amount >= 100) bonus = 30;

        if (bonus > 0) {
            waldoAmount = waldoAmount * (1 + bonus / 100);
        }

        // Show summary
        document.getElementById('summaryText').innerHTML =
            'XRP Amount: ' + amount + ' XRP<br>' +
            'WALDO Amount: ' + waldoAmount.toLocaleString() + ' WALDO' +
            (bonus > 0 ? '<br>Bonus: +' + bonus + '%' : '');

        document.getElementById('purchaseSummary').style.display = 'block';
        document.getElementById('purchaseBtn').disabled = false;
        document.getElementById('purchaseBtn').style.opacity = '1';
        document.getElementById('purchaseBtn').innerText = '🔐 Buy ' + waldoAmount.toLocaleString() + ' WALDO';
    }

    // Load presale progress
    async function loadPresaleProgress() {
        try {
            const response = await fetch('https://waldocoin-backend-api.onrender.com/api/presale/total-sold');
            const data = await response.json();

            if (data.success) {
                const totalXRP = data.totalXRP || 0;
                const totalWaldo = data.totalWaldo || 0;
                const totalPurchases = data.totalPurchases || 0;

                document.getElementById('progressText').innerHTML =
                    'Total Raised: ' + totalXRP.toLocaleString() + ' XRP<br>' +
                    'WALDO Sold: ' + totalWaldo.toLocaleString() + ' WALDO<br>' +
                    'Total Purchases: ' + totalPurchases;
            } else {
                document.getElementById('progressText').innerText = 'Progress data unavailable';
            }
        } catch (error) {
            console.error('Error loading presale progress:', error);
            document.getElementById('progressText').innerText = 'Progress data unavailable';
        }
    }

    async function purchaseWaldo() {
        if (!selectedAmount || !connectedWallet) return;

        try {
            document.getElementById('purchaseBtn').innerText = 'Creating transaction...';
            document.getElementById('purchaseBtn').disabled = true;

            const response = await fetch('https://waldocoin-backend-api.onrender.com/api/presale/buy', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({
                    wallet: connectedWallet,
                    xrpAmount: selectedAmount
                })
            });

            const data = await response.json();

            if (data.success && data.deeplink) {
                document.getElementById('purchaseBtn').innerText = '✅ Check XUMM App';
                window.location.href = data.deeplink;

                if (data.uuid) {
                    pollTransactionStatus(data.uuid);
                }
            } else {
                throw new Error('Purchase failed');
            }
        } catch (error) {
            document.getElementById('purchaseBtn').innerText = '❌ Purchase Failed';
            document.getElementById('purchaseBtn').disabled = false;
            setTimeout(() => {
                document.getElementById('purchaseBtn').innerText = '🔐 Try Again';
            }, 3000);
        }
    }

    function pollTransactionStatus(uuid) {
        const pollInterval = setInterval(async () => {
            try {
                const response = await fetch('https://waldocoin-backend-api.onrender.com/api/presale/status/' + uuid);
                const data = await response.json();

                if (data.completed) {
                    clearInterval(pollInterval);

                    // Auto-disconnect wallet after successful purchase
                    console.log('🔌 Auto-disconnecting wallet after successful purchase...');
                    connectedWallet = null;
                    hasTrustline = false;
                    selectedAmount = 0;

                    // Clear session storage
                    sessionStorage.removeItem('presale_wallet');
                    sessionStorage.removeItem('presale_uuid');

                    // Redirect to success page
                    window.location.href = 'https://waldocoin.live/presale-success/';
                }
            } catch (error) {
                console.error('Status polling error:', error);
            }
        }, 3000);
    }

    function disconnectWallet() {
        console.log('🔌 Disconnect button clicked');
        connectedWallet = null;
        hasTrustline = false;
        selectedAmount = 0;

        // Clear session storage
        sessionStorage.removeItem('presale_wallet');
        sessionStorage.removeItem('presale_uuid');

        console.log('🔌 Wallet disconnected, going to step 1');
        showStep(1);
        connectXummWallet();
    }

    // SIMPLIFIED: Check for existing session
    function checkExistingSession() {
        console.log('🔍 Checking for existing session...');

        // Just check stored wallet - keep it simple
        const storedWallet = sessionStorage.getItem('presale_wallet');

        if (storedWallet && storedWallet.startsWith('r')) {
            console.log('✅ Found stored wallet:', storedWallet);
            connectedWallet = storedWallet;

            // Update UI to show connected state
            document.getElementById('connectedWallet').innerText = connectedWallet;
            document.getElementById('connectionStatus').innerText = 'Reconnected!';
            document.getElementById('connectionStatus').style.color = '#25c2a0';
            document.getElementById('disconnectBtn').style.display = 'inline-block';

            // Skip to trustline check
            checkTrustlineAndProceed();
            return true;
        }

        console.log('No stored session found');
        return false;
    }

    // Manual trustline check function
    async function manualCheckTrustline() {
        console.log('🔍 Manual trustline check requested');
        document.getElementById('trustlineStatus').innerText = 'Checking trustline...';
        document.getElementById('trustlineStatus').style.color = '#ffd93d';
        document.getElementById('manualTrustlineCheck').style.display = 'none';

        try {
            const hasWaldoTrustline = await checkTrustlineDirectXRPL(connectedWallet);

            if (hasWaldoTrustline) {
                console.log('✅ Manual check: Trustline found!');
                document.getElementById('trustlineStatus').innerText = 'Trustline found! Proceeding...';
                document.getElementById('trustlineStatus').style.color = '#25c2a0';

                hasTrustline = true;
                setTimeout(() => {
                    showStep(3);
                    loadPresaleProgress();
                }, 1000);
            } else {
                console.log('❌ Manual check: Trustline not found');
                document.getElementById('trustlineStatus').innerText = 'Trustline not found. Please add it first.';
                document.getElementById('trustlineStatus').style.color = '#e74c3c';

                // Show button again after 5 seconds
                setTimeout(() => {
                    document.getElementById('manualTrustlineCheck').style.display = 'inline-block';
                }, 5000);
            }
        } catch (error) {
            console.error('❌ Manual trustline check error:', error);
            document.getElementById('trustlineStatus').innerText = 'Check failed. Please try again.';
            document.getElementById('trustlineStatus').style.color = '#e74c3c';

            // Show button again after 3 seconds
            setTimeout(() => {
                document.getElementById('manualTrustlineCheck').style.display = 'inline-block';
            }, 3000);
        }
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function () {
        // First check for existing session
        if (!checkExistingSession()) {
            // No existing session, start fresh
            showStep(1);
            connectXummWallet();
        }
    });
</script>