<div id="presale-timer" class="digital-clock-box">
  <div class="digital-label">‚è± WALDO Presale Ends In:</div>
  <div id="presale-countdown" class="digital-display">Loading...</div>
</div>

<script>
  function updateCountdown() {
    fetch("https://waldocoin-backend-api.onrender.com/api/presale/countdown")
      .then(res => res.json())
      .then(data => {
        if (data.endDate) {
          const date = new Date(data.endDate);
          const display = document.getElementById("presale-countdown");
          display.textContent = date.toLocaleString("en-US", { timeZone: "UTC" }) + " UTC";
        } else {
          document.getElementById("presale-countdown").textContent = "Not Set";
        }
      })
      .catch(err => {
        console.error("Countdown fetch error:", err);
        document.getElementById("presale-countdown").textContent = "Error loading";
      });
  }

  document.addEventListener("DOMContentLoaded", updateCountdown);
</script>
