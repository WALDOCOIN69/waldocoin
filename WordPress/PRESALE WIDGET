<!-- üîß Script -->
<script>
const waldoBonusTable = {
  10: 1000000, 20: 2000000, 30: 3000000, 40: 4000000, 50: 5000000,
  60: 6000000, 70: 7000000, 80: 10000000, 90: 12000000, 100: 15000000
};

function openWaldoSliderModal() {
  document.getElementById('waldoSliderModal').style.display = 'block';
  updateWaldoAmount();
  const wallet = localStorage.getItem("xummWallet");
  document.getElementById("connectedWallet").innerText = wallet ? wallet : "Not connected";
  document.getElementById("buySuccessMsg").style.display = "none";
  document.getElementById("buyWaldoBtn").disabled = false;
  document.getElementById("buyWaldoBtn").innerText = "üîê Buy Now with XUMM";
  if (!wallet) connectXummWallet();
}

function closeWaldoSliderModal() {
  document.getElementById('waldoSliderModal').style.display = 'none';
}

function updateWaldoAmount() {
  const amount = parseInt(document.getElementById("xrpInput").value);
  const waldo = waldoBonusTable[amount] || 0;
  document.getElementById("waldoOutput").value = waldo.toLocaleString();
}

async function buyWaldoSlider() {
  const amount = parseInt(document.getElementById("xrpInput").value);
  const wallet = localStorage.getItem("xummWallet");
  if (!wallet) return alert("Please connect your XUMM wallet first.");

  const btn = document.getElementById("buyWaldoBtn");
  btn.innerText = "‚è≥ Sending...";
  btn.disabled = true;

  const res = await fetch("https://waldocoin-backend-api.onrender.com/api/presale/buy", {
    method: "POST",
    headers: { "Content-Type": "application/json" },
    body: JSON.stringify({ wallet, xrpAmount: amount })
  });

  const data = await res.json();
  if (data && data.redirect) {
    window.location.href = data.redirect;
  } else if (data && data.success) {
    document.getElementById("buySuccessMsg").style.display = "block";
    btn.innerText = "‚úÖ WALDO Sent!";
  } else {
    alert("Failed to create XUMM sign request.");
    btn.innerText = "üîê Buy Now with XUMM";
    btn.disabled = false;
  }
}

async function connectXummWallet() {
  const res = await fetch("https://waldocoin-backend-api.onrender.com/api/login");
  const data = await res.json();
  if (data.qr && data.uuid) {
    document.getElementById("xummQR").src = data.qr;
    localStorage.setItem("xummUUID", data.uuid);

    if (/Mobi|Android/i.test(navigator.userAgent) && data.refs?.xapp) {
      const deepLink = document.getElementById("xummDeepLink");
      deepLink.href = data.refs.xapp;
      deepLink.style.display = "inline-block";
    }
  } else {
    alert("Failed to connect with XUMM.");
  }
}
</script>

